{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {  
    "jsx": "react", 
    "noEmitOnError": false,
    "lib": [
      "dom"
    ],
    "noImplicitAny": false,  
    "noImplicitReturns": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "allowSyntheticDefaultImports": true 
  },
  "include": [
    "./typings/*.d.ts", 
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.js", 
    "./**/*.jsx",
    "**/*.tsx" 
  ]
}